// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  product      Product[]
  accounts     Account[]
  payment      User_payment?
  subscription User_subscription?
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User_subscription {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique @db.ObjectId
  store_active Boolean  @default(false)

  stripeAccountId        String?   @map(name: "stripe_account_id")
  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model User_payment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique @db.ObjectId

  stripeAccountId        String?  @map(name: "stripe_account_id")
  stripeAccountCreatedAt Int?     @map(name: "stripe_account_created_at")
  stripeAccountExpiresAt Int?     @map(name: "stripe_account_expires_at")
  detailsSubmitted       Boolean?
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  price       Int
  images      Json
  inventory   Int
  description String
  category    Category @default(CLOTHING)
  subCategory String
  tags        String[]

  seller   User   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId String @db.ObjectId

  collectionIds String[]     @db.ObjectId
  collections   Collection[] @relation(fields: [collectionIds], references: [id])

  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
}

model Collection {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  productIds String[]  @db.ObjectId
  products   Product[] @relation(fields: [productIds], references: [id])
}

model Carts {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  clientstripesecret String?
  checkoutsessionId  String?
  paymentIntentId    String?  @unique
  items              Json
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
}

model Order {
  id                        String @id @default(auto()) @map("_id") @db.ObjectId
  sellerId                  String @db.ObjectId
  userId                    String @db.ObjectId
  total                     Int
  items                     Json
  stripePaymentIntent       String
  stripePaymentIntentStatus String
  email                     String
  address                   String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Category {
  CLOTHING
  SHOES
  ACCESSORIES
}

enum Size {
  XXS
  XS
  S
  M
  L
  XL
  XXL
  XXX
}
